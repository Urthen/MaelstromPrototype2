mixin style(filename)
	if !production
		link(rel="stylesheet/less", href="/less/" + filename + ".less")
	else
		link(rel="stylesheet", href="/css/" + filename + ".css")

!!!
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="viewport", content="width=device-width,initial-scale=1")
		
		title Project Maelstrom
		meta(name="description", content="There's an ocean of data out there. Let's help you funnel it.")
		meta(property="og:title", content="Project Maelstrom")
		meta(property="og:url", content="http://prototype.projectmaelstrom.com")
		meta(property="og:site_name", content="Project Maelstrom")
		meta(property="og:description", content="There's an ocean of data out there. Let's help you funnel it.")		
		
		block styles
			mixin style('index')
		
		if !production
			script(type="text/javascript", src="/js/less.min.js")

		script(type="text/javascript", src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
		block scripts

		script(type="text/javascript") 
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-31255016-3']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();

	body(data-csrf=token)
		.header
			.innerheader
				block header
					if (user)
						.loginstatus Logged in as 
							span.username= user.name 
							a(href="/logout").button.logout Logout
					else
						.loginstatus Not logged in. 
							a(href="/new").button.login Sign up or sign in

					h1 
						a(href="/") Project Maelstrom
		.main
			.nav
				- var location;
				block nav
					- var menu = {}; menu[location] = 'selected';
					a.item(href="/", class=menu["Home"]) Home
					a.item(href="/", class=menu["Manage"]) Manage Apps and Subscriptions
					a.item(href="/", class=menu["Transactions"]) View Balance and History
					a.item(href="/", class=menu["Develop"]) Develop Applications
			.content
				block content
			.footer
				block footer
